# vim:fileencoding=utf-8:foldmethod=marker

font_family        VictorMono Nerd Font
bold_font          auto
italic_font        auto
bold_italic_font   auto
font_size 16.0
disable_ligatures never

cursor_shape block
cursor_blink_interval 0

scrollback_lines 5000
mouse_hide_wait 2.0

url_style straight
detect_urls yes

copy_on_select clipboard

mouse_map left click ungrabbed mouse_handle_click selection link prompt

enable_audio_bell no

# Window management
initial_window_width  640
initial_window_height 400

enabled_layouts fat,tall, stack
window_padding_width 4 0 0 8

hide_window_decorations titlebar-only
tab_bar_style powerline
tab_bar_min_tabs 2
tab_powerline_style slanted
tab_title_template "{fmt.fg.red}{bell_symbol}{activity_symbol}{fmt.fg.tab}{index}"

editor /opt/homebrew/bin/nvim

shell_integration no-cursor

macos_option_as_alt both
macos_quit_when_last_window_closed yes
macos_traditional_fullscreen yes
macos_show_window_title_in none
macos_colorspace displayp3


# Keymaps
kitty_mod alt+shift

map cmd+enter launch --cwd=current
map cmd+t new_tab_with_cwd

map cmd+1 goto_tab 1
map cmd+2 goto_tab 2
map cmd+3 goto_tab 3
map cmd+4 goto_tab 4
map cmd+5 goto_tab 5

map kitty_mod+r next_layout
map kitty_mod+m toggle_layout stack

# BEGIN_KITTY_THEME
# Gruvbox Material Dark Hard
include current-theme.conf
# END_KITTY_THEME

# Natural text navigation
map alt+left send_text all \x1b\x62
map alt+right send_text all \x1b\x66
map cmd+left send_text all \x01
map cmd+right send_text all \x05

# Vim navigations
map ctrl+j kitten pass_keys.py neighboring_window bottom ctrl+j
map ctrl+k kitten pass_keys.py neighboring_window top    ctrl+k
map ctrl+h kitten pass_keys.py neighboring_window left   ctrl+h
map ctrl+l kitten pass_keys.py neighboring_window right  ctrl+l

allow_remote_control yes
listen_on unix:/tmp/mykitty
###############################################################

# Background
background_image leaves.png
background_image_layout cscaled
background_opacity 1
background_tint 0.90
